{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Check",
            "type": "shell",
            "command": "mypy --ignore-missing-imports --disallow-incomplete-defs src && flake8 --ignore E402 --max-line-length=99 src",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "python src/main.py",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "dependsOn": [
                "Check"
            ]
        },
        {
            "label": "Copy to Pi",
            "type": "shell",
            "command": "sshpass -p \"raspberry\" scp -r src pi@192.168.0.22:/home/pi/booth-py/",
            "presentation": {
                "reveal": "always"
            }
        },
    ]
}
